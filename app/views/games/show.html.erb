  <div class="col-10 center offset-1">
    <table id="chessboard">
      <tbody>
        <% [8,7,6,5,4,3,2,1].each do |row| %>
          <tr>
            <% (1..8).each do |col| %>
              <td data-x_position=<%= col %> data-y_position =<%= row%>
              <% if (col + row).odd? %>
                class="white"
              <% else %>
                class="black"
              <% end %>
              >
              <% render_piece(@game) %>
                <% @pieces.each do |piece| %>
                  <% x = piece.x_position %>
                  <% y = piece.y_position %>
                  <% type = piece.type %>
                  <% if x == col && y == row %>
                  <div class="pieces_color">
                    <%= link_to piece.piece_unicode.html_safe, chess_piece_path(piece) %>
                  </div>
                  <% end %>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>