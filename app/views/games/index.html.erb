<h1>Welcome to Not-Just-Chess</h1>

<br/><br/>
<% if @games %>
  <h2>Available Games to Join:</h2>
  <%= @games.each do |game| %>
    <div>
     <h3><%= link_to "Join Game ##{game.id}", game_path(game.id), method: :patch %></h3>
    <div>
  <% end %>
<% else %>
  <h2> No available games found. Please start a new game to proceed </h2>
<% end %> 